---
import { Icon } from "astro-icon/components";

const categories = [
    {
        name: "Computers",
        image: "https://images.unsplash.com/photo-1496181133206-80ce9b88a853?auto=format&fit=crop&w=500&q=80",
        path: "/category/computers",
    },
    {
        name: "Phones",
        image: "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?auto=format&fit=crop&w=500&q=80",
        path: "/category/phones",
    },
    {
        name: "Audio",
        image: "https://images.unsplash.com/photo-1558403194-611308249627?auto=format&fit=crop&w=500&q=80",
        path: "/category/audio",
    },
    {
        name: "Accessories",
        image: "https://images.unsplash.com/photo-1527864550417-7fd91fc51a46?auto=format&fit=crop&w=500&q=80",
        path: "/category/accessories",
    },
];
---

<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
            class="text-3xl font-black text-slate-900 uppercase italic tracking-tighter mb-12"
        >
            Categor√≠as
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {
                categories.map((category) => (
                    <a href={category.path} class="group cursor-pointer block">
                        <!-- Card -->
                        <div class="aspect-square overflow-hidden bg-slate-100 flex items-center justify-center relative">
                            <img
                                src={category.image}
                                alt={category.name}
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-in-out"
                            />
                            <!-- Optional Overlay on Hover -->
                            <div class="absolute inset-0 bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                        </div>
                        <!-- Category Name -->
                        <div class="mt-4 flex items-center justify-between border-b-2 border-transparent group-hover:border-primary transition-all duration-300 pb-2">
                            <span class="text-sm font-black uppercase tracking-[0.2em] text-slate-900">
                                {category.name}
                            </span>
                            <Icon
                                name="lucide:arrow-right"
                                class="w-4 h-4 text-slate-900 transition-transform group-hover:translate-x-1"
                            />
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
