---
import Layout from "../layouts/Layout.astro";
import FormContact from "../components/contact/FormContact.astro";
import { Icon } from "astro-icon/components";
---

<Layout>
    <section class="max-w-7xl mx-auto px-4 py-16 lg:py-24">
        <!-- Centered Title -->
        <h2
            class="text-3xl md:text-5xl font-black text-center uppercase tracking-tighter mb-16"
        >
            Get in <span class="text-primary">Touch</span>
        </h2>

        <!-- Main Container -->
        <div class="flex flex-col lg:flex-row items-start gap-12 lg:gap-20">
            <!-- Left Side: Text & Contact Info -->
            <div class="w-full lg:w-5/12 flex flex-col justify-center">
                <div class="prose prose-lg mb-10">
                    <p
                        class="text-xl md:text-2xl font-medium text-base-content leading-relaxed"
                    >
                        Leave us a message and we will get back to you shortly.
                        Our team is ready to provide personalized advice and
                        guide you through every step of the process.
                    </p>
                </div>

                <!-- Contact Details -->
                <div class="space-y-6 mb-10">
                    <div class="flex items-start gap-4">
                        <div
                            class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary shrink-0"
                        >
                            <Icon name="lucide:map-pin" class="w-5 h-5" />
                        </div>
                        <div>
                            <h3 class="font-bold text-lg">Visit Us</h3>
                            <p class="text-base-content/70">123 Tech Street</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div
                            class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary shrink-0"
                        >
                            <Icon name="lucide:phone" class="w-5 h-5" />
                        </div>
                        <div>
                            <h3 class="font-bold text-lg">Call Us</h3>
                            <p class="text-base-content/70">
                                +1 (555) 123-4567
                            </p>
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div
                            class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary shrink-0"
                        >
                            <Icon name="lucide:mail" class="w-5 h-5" />
                        </div>
                        <div>
                            <h3 class="font-bold text-lg">Email Us</h3>
                            <p class="text-base-content/70">
                                contact@e-commerce.com
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Social Icons -->
                <div>
                    <h3 class="font-bold text-lg mb-4">Follow Us</h3>
                    <div class="flex gap-4">
                        <a
                            href="#"
                            class="btn btn-circle btn-ghost hover:bg-primary/10 hover:text-primary transition-colors"
                        >
                            <Icon name="lucide:facebook" class="w-6 h-6" />
                        </a>
                        <a
                            href="#"
                            class="btn btn-circle btn-ghost hover:bg-primary/10 hover:text-primary transition-colors"
                        >
                            <Icon name="lucide:twitter" class="w-6 h-6" />
                        </a>
                        <a
                            href="#"
                            class="btn btn-circle btn-ghost hover:bg-primary/10 hover:text-primary transition-colors"
                        >
                            <Icon name="lucide:instagram" class="w-6 h-6" />
                        </a>
                        <a
                            href="#"
                            class="btn btn-circle btn-ghost hover:bg-primary/10 hover:text-primary transition-colors"
                        >
                            <Icon name="lucide:linkedin" class="w-6 h-6" />
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Side: Form -->
            <div class="w-full lg:w-8/12">
                <FormContact />
            </div>
        </div>
    </section>
</Layout>
